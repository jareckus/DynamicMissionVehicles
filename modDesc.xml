		<storeItem xmlFilename="vehicles/Erdfruechte/grimme/rexor6300.xml"/>
		<storeItem xmlFilename="vehicles/Erdfruechte/grimme/rootster604.xml"/>
		<storeItem xmlFilename="vehicles/Erdfruechte/grimme/ventor4150.xml"/>
		<storeItem xmlFilename="vehicles/Erdfruechte/ropa/keiler2.xml"/>
		<storeItem xmlFilename="vehicles/Erdfruechte/ropa/panther2.xml"/>
		<storeItem xmlFilename="vehicles/Erdfruechte/ropa/rr6x45.xml"/>
		<storeItem xmlFilename="vehicles/Erdfruechte/ropa/tiger6S.xml"/>
